<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onetrillion.trip.service.mapper.NoticeMapper">


                                                      <!-- @@ 공지사항 CRUD   [10/11 월 한보영]  -->


<!-- @@ 리스트 -->
<select resultType="com.onetrillion.trip.board.CsnoticeDTO" id="selectAll">
<![CDATA[ SELECT * FROM TRIL_NOTICE ORDER BY NO_SEQ ASC  ]]>
</select>

<!-- 상세보기 나중에 admin하고 나서 할 예정-->
<select resultType="com.onetrillion.trip.board.CsnoticeDTO" id="detail">
<![CDATA[   select * from TRIL_NOTICE where NO_SEQ=#{NO_SEQ} ]]> 
</select>

<!-- 입력 나중에 admin하고 나서 할 예정-->
<insert id="insert">
<![CDATA[ insert into
		TRIL_NOTICE(no_seq, ad_id, no_title, no_content, no_Date)
		values(
		(select nvl(max(no_seq), 0)+1 from TRIL_NOTICE)
		,#{ad_id},#{no_title},#{no_content},sysdate)]]>		
</insert>


<!-- @@ 자주하는 질문 CRUD   [10/11 한보영]  -->
<!-- @@ 리스트 -->
<select resultType="com.onetrillion.trip.board.OftenDTO" id="selectAll_often">
<![CDATA[ SELECT * FROM TRIL_OFTEN ORDER BY OF_SEQ ASC  ]]>
</select>


</mapper>




